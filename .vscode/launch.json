{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "factoriomod",
            "request": "launch",
            "name": "Factorio Mod Debug",
            "modsPath": "~/.factorio/mods/",
            "manageMod": true,
            "adjustMods": {
                "debugadapter": true,
                "flib": true,
                "cybersyn": true,
                "creative-mod": true,
            },
            "disableExtraMods": true
        },
        {
            "type": "factoriomod",
            "request": "launch",
            "name": "Factorio Mod Debug (Modded)",
            "modsPath": "~/.factorio/mods/",
            "manageMod": true,
            "adjustMods": {
                "debugadapter": true,
                "flib": true,
                "cybersyn": true,
            },
            "disableExtraMods": false
        },
        {
            "type": "factoriomod",
            "request": "launch",
            "name": "Factorio Mod Debug (Settings & Data)",
            "modsPath": "~/.factorio/mods/",
            "hookSettings": true,
            "hookData": true,
            "adjustMods": {
                "debugadapter": true,
                "flib": true,
                "cybersyn": true,
            },
            //"disableExtraMods": true
        },
        {
            "type": "factoriomod",
            "request": "launch",
            "name": "Factorio Mod Debug (Profile)",
            "modsPath": "~/.factorio/mods/",
            "hookMode": "profile",
            "adjustMods": {
                "debugadapter": true,
                "flib": true,
            },
        }
    ]
}
